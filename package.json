{
  "name": "root",
  "private": true,
  "version": "0.3.0",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "overrides": {
    "zksync-web3": "npm:zksync-ethers@^5.0.0"
  },
  "scripts": {
    "postinstall": "node ./scripts/postinstall.mjs",
    "build": "cd packages/site && npm run build",
    "dev:mock": "npx -w ./packages/site npm run dev:mock",
    "generate-abi": "node ./scripts/generate-site-abi.mjs",
    "is-hardhat-node-running": "node ./scripts/is-hardhat-node-running.mjs",
    "hardhat-node": "npx -w ./packages/contracts hardhat node --verbose",
    "deploy:sepolia": "npx -w ./packages/contracts hardhat deploy --network sepolia",
    "deploy:hardhat-node": "npm run is-hardhat-node-running && npx -w ./packages/contracts hardhat deploy --network localhost",
    "verify:sepolia": "npx -w ./packages/contracts hardhat run scripts/verify.ts --network sepolia",
    "flatten": "npx -w ./packages/contracts hardhat flatten contracts/ChiperProtocol.sol > ChiperProtocol_flat.sol"
  }
}

